{
  "version": "independent",
  "npmClient": "yarn",
  "useWorkspaces": true,
  "command": {
    "publish": {
      "registry": "https://npm.pkg.github.com",
      "ignoreChanges": [
        "**/*.md",
        "**/*.spec.tsx",
        "**/*.stories.tsx",
        "**/tsconfig.json",
        "**/vite.config.js",
        "**/.storybook/**",
        "**/dist/**",
        "**/node_modules/**"
      ]
    },
    "bootstrap": {
      "npmClientArgs": [
        "--no-package-lock",
        "--legacy-peer-deps"
      ]
    }
  },
  "packages": [
    "packages/*"
  ]
}

{
  "compilerOptions": {
    "strict": true,
    "target": "esnext",
    "module": "es2020",
    "moduleResolution": "node",
    "types": ["node", "vitest/globals", "@testing-library/jest-dom"],
    "allowJs": true,
    "noEmit": true,
    "strictBindCallApply": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "jsx": "react-jsx",
    "skipLibCheck": true
  },
  "exclude": ["node_modules", "**.spec.ts", "dist"]
}
